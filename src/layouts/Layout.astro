---
import "@fontsource-variable/onest";
import NavBar from "../components/Nav-bar.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Ildefonso Lares | Portfolio</title>
  </head>
  <body>
    <div
      class="absolute top-0 z-[-2] h-screen w-screen bg-blue-950-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(255,165,0,0.5),rgba(255,255,255,0))]"
    >
    </div>
    <NavBar />
    <slot />
  </body>
</html>

<style>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: "Onest Variable", sans-serif;
    scroll-behavior: smooth;
  body {
    background: #23353f;
    display: flex;
    justify-content: center;
    margin: 0;
    width: 100%;
    height: 100%;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
