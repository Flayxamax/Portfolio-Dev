import LinkedInIcon from "../icons/LinkedIn.astro";
import MailIcon from "../icons/Mail.astro";
---

<div
  class="flex flex-col sm:flex-row items-center gap-y-4 sm:gap-x-4 justify-center sm:justify-start"
>
  <img
    class="rounded-full w-32 h-32 sm:w-32 sm:h-32 md:w-40 md:h-40 lg:w-48 lg:h-48 border-2 border-orange-500"
    src="https://media.licdn.com/dms/image/v2/D4E03AQFy7doMhAk9XQ/profile-displayphoto-shrink_200_200/B4EZXWrD0FHMAY-/0/1743063367529?e=1750896000&v=beta&t=gGDEePLY3LiZFkUO5wgaGFkxoVDDxwbfAGg-faQBNME"
    alt="Profile pic"
  />
  <a
    href="https://www.linkedin.com/in/ildefonso-lares-rangel-096928345/"
    target="_blank"
    rel="noopener"
    class="flex justify-center items-center"
  >
