---
interface Props {
  title: string;
  date: string;
  description: string;
  isLatest?: boolean;
}

const { title, date, description, isLatest } = Astro.props;
---

<span
  class="absolute flex items-center justify-center size-6 bg-blue-100 rounded-full -start-3 dark:bg-orange-500"
>
</span>
<h3
  class="flex items-center mb-1 text-2xl font-normal text-gray-900 dark:text-orange-500"
>
  {title}
  {
    isLatest && (
      <span class="bg-blue-100 text-sm font-medium me-2 px-2.5 py-0.5 rounded-sm dark:bg-emerald-700 dark:text-white ms-3">
        Currently
      </span>
    )
  }
</h3>
<time class="block mb-2 text=2xl font-semibold text-gray-400 dark:text-white"
  >{date}</time
>
<p class="mb-4 text-base font-light text-gray-500 dark:text-white opacity-90">
  {description}
</p>
